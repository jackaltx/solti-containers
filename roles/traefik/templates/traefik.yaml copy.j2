---
global:
  checkNewVersion: true
  sendAnonymousUsage: false

api:
  dashboard: {{ traefik_dashboard_enabled | lower }}
  insecure: true  # Never expose dashboard without authentication  (testing only)

log:
  level: DEBUG
  filePath: "/logs/traefik.log"

accessLog:
  filePath: "/logs/access.log"

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: "{{ traefik_internal_network }}"
    httpClientTimeout: 60  # Increase timeout
    watch: true

entryPoints:
  web:
    address: ":80"
{% if traefik_enable_ssl %}
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
{% endif %}

  websecure:
    address: ":443"
{% if traefik_enable_ssl %}
    http:
      tls:
        certResolver: letsencrypt
{% endif %}

  dashboard:
    address: ":9000"

{% if traefik_enable_ssl %}
certificatesResolvers:
  letsencrypt:
    acme:
      email: "{{ traefik_acme_email }}"
      storage: "/etc/traefik/acme/acme.json"
{% if traefik_acme_staging %}
      caServer: "https://acme-staging-v02.api.letsencrypt.org/directory"
{% endif %}
      dnsChallenge:
        provider: linode
        resolvers:
          - "1.1.1.1:53"
          - "8.8.8.8:53"
        delayBeforeCheck: 30
{% endif %}

# Enabled dashboard via a router
http:
  routers:
    dashboard:
      rule: "PathPrefix(`/api`) || PathPrefix(`/dashboard`)"
      service: api@internal
      entrypoints:
        - dashboard