[Unit]
Description=Elasticsearch Container
After=network-online.target

[Container]
Image={{ elasticsearch_image }}
ContainerName=elasticsearch-node
Pod=elasticsearch
Volume={{ elasticsearch_data_dir }}/config:/usr/share/elasticsearch/config:Z,U
Volume={{ elasticsearch_data_dir }}/data:/usr/share/elasticsearch/data:Z,U
Volume={{ elasticsearch_data_dir }}/logs:/usr/share/elasticsearch/logs:Z,U
Environment=ES_JAVA_OPTS=-Xms{{ elasticsearch_memory }} -Xmx{{ elasticsearch_memory }} -Djava.security.manager=disallow
Environment=discovery.type=single-node
Environment=DISABLE_SECURITY_MANAGER=true
Environment=ELASTIC_CONTAINER=true
Ulimit=memlock=-1:-1
Ulimit=nofile=65535:65535

[Service]
Restart=always
TimeoutStartSec=300
TimeoutStopSec=70

[Install]
WantedBy=default.target