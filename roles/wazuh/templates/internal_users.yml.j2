---
# Internal user database for Wazuh deployment
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

_meta:
  type: "internalusers"
  config_version: 2

{% for user in wazuh_users_with_hashes %}
{{ user.name }}:
  hash: "{{ user.hash }}"
  reserved: {{ user.reserved | default(false) | bool | lower }}
{% if user.backend_roles is defined and user.backend_roles | length > 0 %}
  backend_roles:
{% for role in user.backend_roles %}
  - "{{ role }}"
{% endfor %}
{% endif %}
  description: "{{ user.description | default('User created by Ansible') }}"

{% endfor %}
